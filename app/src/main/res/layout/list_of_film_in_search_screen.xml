<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayoutNotify"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="@drawable/rounded_list_obj">

    <ImageView
        android:id="@+id/userprofilepic_view"
        android:layout_width="90dp"
        android:layout_height="120dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        />

    <TextView
        android:id="@+id/usernick_view"
        android:layout_width="wrap_content"
        android:layout_height="27dp"
        android:layout_marginStart="110dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/poppins_bold"
        android:text="Avengers Endgame"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:maxWidth="300dp"
        android:autoSizeTextType="uniform"/>

    <TextView
        android:id="@+id/textViewRelaseDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_marginStart="110dp"
        android:layout_marginTop="45dp"
        android:textSize="10sp"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/poppins_bold"
        android:maxWidth="80dp"
        android:autoSizeTextType="uniform"/>

    <TextView
        android:id="@+id/textViewTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_marginStart="200dp"
        android:layout_marginTop="45dp"
        android:textSize="10sp"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/poppins_bold"
        android:maxWidth="50dp"
        android:autoSizeTextType="uniform"/>

    <TextView
        android:id="@+id/textViewCategories"
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        android:text="TextView"
        android:layout_marginStart="110dp"
        android:layout_marginTop="65dp"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/poppins_bold"
        android:textSize="10sp"
        android:maxHeight="17dp"
        android:autoSizeTextType="uniform"/>

    <TextView
        android:id="@+id/textViewPlot"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="TextView"
        android:layout_marginStart="110dp"
        android:layout_marginTop="85dp"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        android:fontFamily="@font/poppins_bold"
        android:maxWidth="250dp"
        android:maxHeight="66dp"
        android:autoSizeTextType="uniform"/>

</RelativeLayout>