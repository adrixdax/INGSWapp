<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp"
    android:background="@drawable/circle_obj"
    android:id="@id/relativeLayoutNotify">

    <TextView
        android:id="@+id/notifyText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:layout_marginStart="10dp"
        android:maxWidth="150dp"
        android:autoSizeTextType="uniform"/>

    <ImageView
        android:id="@+id/acceptNotify"
        android:background="@drawable/circle_obj_green"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:scaleType="fitCenter"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@id/notifyText"
        android:layout_centerVertical="true"
        app:srcCompat="@drawable/yes_tick" />

    <ImageView
        android:id="@+id/denyNotify"
        android:background="@drawable/circle_obj_red"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_toEndOf="@id/acceptNotify"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="15dp"
        android:layout_centerVertical="true"
        app:srcCompat="@android:drawable/ic_menu_close_clear_cancel" />
</RelativeLayout>